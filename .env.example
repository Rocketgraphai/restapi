# RocketGraph Public API - Complete Environment Configuration
# Copy this file to .env and customize for your environment
# Uses XGT Pass-through Authentication (no admin credentials stored)

# Application Settings
APP_NAME="RocketGraph Public API"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security Settings (REQUIRED - Generate secure values for production)
SECRET_KEY=dev-secret-key-change-in-production
API_KEY_SALT=dev-api-key-salt-change-in-production

# Network Security (leave empty for development defaults)
# ALLOWED_HOSTS=localhost,127.0.0.1,api.yourdomain.com
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# XGT Database Connection (no credentials stored - uses pass-through auth)
XGT_HOST=localhost
XGT_PORT=4367
XGT_USE_SSL=false
# XGT_SSL_CERT=/path/to/xgt-server.pem
# XGT_SERVER_CN=xgt.yourdomain.com

# XGT Pass-through Authentication Settings
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_SECONDS=3600

# XGT Authentication Methods (enable/disable as needed)
XGT_BASIC_AUTH_ENABLED=true
XGT_PKI_AUTH_ENABLED=true
XGT_PROXY_PKI_AUTH_ENABLED=false

# Database Settings (currently unused - ready for future implementation)
# MONGODB_URI=mongodb://localhost:27017/rocketgraph_api  # Future: API metadata storage
# MONGODB_DATABASE=rocketgraph_api                       # Future: MongoDB database name

# Caching & Rate Limiting (currently unused - ready for future implementation)
# REDIS_URL=redis://localhost:6379                       # Future: Caching/rate limiting
# REDIS_DB=0                                             # Future: Redis database number
# RATE_LIMITING_ENABLED=true                            # Future: Rate limiting toggle
# DEFAULT_RATE_LIMIT_PER_MINUTE=100                     # Future: Rate limits
# DEFAULT_RATE_LIMIT_PER_HOUR=1000                      # Future: Rate limits
# DEFAULT_RATE_LIMIT_PER_DAY=10000                      # Future: Rate limits

# LLM Settings (Optional - comment out if not needed)
# LLM_PROVIDERS=openai,anthropic
# OPENAI_API_KEY=your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Headers
SECURITY_HEADERS_ENABLED=true